@page "/admin/events/{EventId:int}/guests"
@rendermode InteractiveServer

@using LcvFlow.Domain.Entities
@using LcvFlow.Domain.Interfaces
@using LcvFlow.Service.Dtos.Admin
@using System.Text.Json
@using Microsoft.EntityFrameworkCore

@inject IGuestRepository GuestRepository
@inject IEventRepository EventRepository
@inject NavigationManager NavManager

<div class="container mt-4 mb-5">
    @* ÜST BAŞLIK VE NAVİGASYON *@
    <div class="row align-items-center mb-4">
        <div class="col-md-7">
            <button class="btn btn-sm btn-link text-decoration-none text-muted p-0 mb-1" @onclick='() => NavManager.NavigateTo("/admin/dashboard")'>
                <i class="oi oi-chevron-left small"></i> Dashboard'a Dön
            </button>
            <h3 class="fw-bold text-dark mb-0">
                <i class="oi oi-people me-2 text-warning"></i>@(_event?.Name)
            </h3>
            <span class="badge bg-light text-dark border mt-2">Toplam @(_guests?.Count ?? 0) Davetli</span>
        </div>
        <div class="col-md-5 text-md-end mt-3 mt-md-0">
            <div class="btn-group shadow-sm">
                <button class="btn btn-white border" @onclick="RefreshList" title="Listeyi Yenile">
                    <i class="oi oi-reload"></i>
                </button>
                <button class="btn btn-dark fw-bold" @onclick='() => NavManager.NavigateTo($"/admin/events/edit/{EventId}")'>
                    <i class="oi oi-cog me-1"></i> Etkinlik Ayarları
                </button>
            </div>
        </div>
    </div>

    @* ARAMA VE FİLTRELEME *@
    <div class="card shadow-sm border-0 mb-4 bg-white">
        <div class="card-body">
            <div class="row g-3">
                <div class="col-md-8">
                    <div class="input-group">
                        <span class="input-group-text bg-white border-end-0"><i class="oi oi-magnifying-glass text-muted"></i></span>
                        <input type="text" class="form-control border-start-0 ps-0" placeholder="İsim veya telefon ile ara..." 
                               @bind="_searchTerm" @bind:event="oninput" />
                    </div>
                </div>
                <div class="col-md-4">
                    <select class="form-select fw-medium" @bind="_statusFilter">
                        <option value="">Tüm Durumlar</option>
                        <option value="Pending">⏳ Bekleniyor</option>
                        <option value="Attending">✅ Geliyor</option>
                        <option value="Declined">❌ Gelemiyor</option>
                    </select>
                </div>
            </div>
        </div>
    </div>

    @* TABLO *@
    <div class="card shadow-sm border-0 overflow-hidden">
        <div class="table-responsive">
            <table class="table table-hover align-middle mb-0">
                <thead class="bg-dark text-white">
                    <tr>
                        <th class="ps-4">Ad Soyad</th>
                        <th>Telefon</th>
                        <th>Durum</th>
                        @foreach (var field in _dynamicFieldLabels)
                        {
                            <th>@field</th>
                        }
                        <th class="text-end pe-4">İşlemler</th>
                    </tr>
                </thead>
                <tbody>
                    @if (_guests == null)
                    {
                        <tr><td colspan="10" class="text-center py-5"><div class="spinner-border text-warning"></div></td></tr>
                    }
                    else if (!_filteredGuests.Any())
                    {
                        <tr><td colspan="10" class="text-center py-5 text-muted">Aranan kriterde davetli bulunamadı.</td></tr>
                    }
                    else
                    {
                        @foreach (var guest in _filteredGuests)
                        {
                            <tr>
                                <td class="ps-4 fw-bold text-primary">@guest.FirstName @guest.LastName</td>
                                <td>@guest.PhoneNumber</td>
                                <td>
                                    @if (guest.IsAttending == true)
                                    {
                                        <span class="badge rounded-pill bg-success-subtle text-success border border-success px-3">Geliyor</span>
                                    }
                                    else if (guest.IsAttending == false)
                                    {
                                        <span class="badge rounded-pill bg-danger-subtle text-danger border border-danger px-3">Gelemiyor</span>
                                    }
                                    else
                                    {
                                        <span class="badge rounded-pill bg-light text-muted border px-3">Bekleniyor</span>
                                    }
                                </td>
                                @foreach (var field in _dynamicFieldLabels)
                                {
                                    <td>@(guest.AdditionalProperties.ContainsKey(field) ? guest.AdditionalProperties[field] : "-")</td>
                                }
                                <td class="text-end pe-4">
                                    @* Butonları belirginleştirdik *@
                                    <button class="btn btn-sm btn-primary shadow-sm me-1" title="Düzenle" 
                                            @onclick='() => NavManager.NavigateTo($"/admin/guestedit/{guest.Id}")'>
                                        <i class="oi oi-pencil"></i>
                                    </button>
                                    <button class="btn btn-sm btn-outline-danger" title="Sil" @onclick="() => DeleteGuest(guest.Id)">
                                        <i class="oi oi-trash"></i>
                                    </button>
                                </td>
                            </tr>
                        }
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

@code {
    [Parameter] public int EventId { get; set; }
    private Event? _event;
    private List<Guest>? _guests;
    private List<string> _dynamicFieldLabels = new();
    private string _searchTerm = "";
    private string _statusFilter = "";

    protected override async Task OnInitializedAsync()
    {
        await LoadData();
    }

    private async Task LoadData()
    {
        _event = await EventRepository.GetByIdAsync(EventId);
        _guests = await GuestRepository.Query()
            .Where(x => x.EventId == EventId && !x.IsDeleted)
            .OrderBy(x => x.FirstName)
            .ToListAsync();

        if (_event != null && !string.IsNullOrEmpty(_event.FormConfigJson))
        {
            var config = JsonSerializer.Deserialize<List<FormFieldDefinitionDto>>(_event.FormConfigJson);
            _dynamicFieldLabels = config?.Select(x => x.Label).ToList() ?? new();
        }

        foreach (var guest in _guests)
        {
            guest.LoadAdditionalProperties();
        }
    }

    private IEnumerable<Guest> _filteredGuests => _guests?
        .Where(g => (string.IsNullOrWhiteSpace(_searchTerm) || 
                    (g.FirstName + " " + g.LastName).Contains(_searchTerm, StringComparison.OrdinalIgnoreCase) ||
                    (g.PhoneNumber ?? "").Contains(_searchTerm)) &&
                   (string.IsNullOrEmpty(_statusFilter) || 
                    (_statusFilter == "Attending" && g.IsAttending == true) ||
                    (_statusFilter == "Declined" && g.IsAttending == false) ||
                    (_statusFilter == "Pending" && g.IsAttending == null)))
        ?? new List<Guest>();

    private async Task RefreshList() => await LoadData();

    private async Task DeleteGuest(int id)
    {
        // Delete logic...
    }
}