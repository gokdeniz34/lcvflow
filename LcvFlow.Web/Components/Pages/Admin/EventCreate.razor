            <div class="input-group">
                <input type="text" class="form-control bg-white" value="@fullLink" readonly />
                <a href="@fullLink" target="_blank" class="btn btn-dark">Linke Git</a>
            </div>
        </div>
    }
</div>

@code {
    private CreateEventDto _eventDto = new() { EventDate = DateTime.Now.AddDays(30) };
    private CreateGuestDto _guestDto = new();
    private int _createdEventId = 0;
    private string _eventSlug = "";
    private string _token = "";

    private async Task HandleEventCreate()
    {
        var result = await AdminService.CreateEventAsync(_eventDto);
        if (result.IsSuccess)
        {
            _createdEventId = result.Data;
            _eventSlug = _eventDto.Name.ToSlug();
        }
    }

    private async Task HandleGuestCreate()
    {
        _guestDto.EventId = _createdEventId;
        var result = await AdminService.CreateGuestAsync(_guestDto);
        if (result.IsSuccess)
        {
            _token = result.Data;
        }
    }
}