@page "/admin/events/create"
@page "/admin/events/edit/{Id:int}"
@rendermode InteractiveServer

@using LcvFlow.Domain.Entities
@using LcvFlow.Domain.Enums
@using LcvFlow.Domain.Interfaces
@using LcvFlow.Service.Interfaces
@using LcvFlow.Service.Dtos.Admin
@using System.Text.Json
@using System.IO

@inject IEventRepository EventRepository
@inject IGuestRepository GuestRepository
@inject IExcelService ExcelService
@inject NavigationManager NavManager
@inject IJSRuntime JS

<div class="container py-4">
    @* UX: GERİ DÖN VE BAŞLIK *@
    <div class="mb-4 text-start">
        <a href="admin/events" class="text-warning text-decoration-none fw-bold small mb-2 d-inline-block">
            ← ETKİNLİKLERE DÖN
        </a>
        <h2 class="fw-bold text-dark">@(Id == 0 ? "Yeni Etkinlik Planla" : "Etkinlik Düzenle")</h2>
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="admin/dashboard" class="text-decoration-none">Dashboard</a></li>
                <li class="breadcrumb-item"><a href="admin/events" class="text-decoration-none">Etkinliklerim</a></li>
                <li class="breadcrumb-item active">@(_event?.Name ?? "Yeni")</li>
            </ol>
        </nav>
    </div>

    @if (!string.IsNullOrEmpty(_errorMessage))
    {
        <div class="alert alert-danger border-0 shadow-sm mb-4">
            <i class="oi oi-warning me-2"></i> @_errorMessage
        </div>
    }
    @if (!string.IsNullOrEmpty(_importMessage))
    {
        <div class="alert alert-success border-0 shadow-sm mb-4">
            <i class="oi oi-check me-2"></i> @_importMessage
        </div>
    }

    <div class="card shadow-sm border-0 mb-5">
        <div class="card-header bg-dark text-white d-flex justify-content-between align-items-center py-3">
            <h5 class="mb-0">Etkinlik Detayları</h5>
            @if (Id != 0)
            {
                <button type="button" class="btn btn-warning btn-sm fw-bold shadow-sm" @onclick="DownloadTemplate">
                    Excel Şablonu İndir
                </button>
            }
        </div>

        <div class="card-body p-4">
            <div class="row g-4">
                @* 1. TEMEL BİLGİLER *@
                <div class="col-md-6">
                    <label class="form-label fw-bold small">Etkinlik Adı <span class="text-danger">*</span></label>
                    <input class="form-control @(_nameInvalid ? "is-invalid" : "")" @bind="_event.Name"
                           placeholder="Örn: Teknoloji Zirvesi" />
                </div>
                <div class="col-md-6">
                    <label class="form-label fw-bold small">URL Uzantısı (Slug) <span
                        class="text-danger">*</span></label>
                        <div class="input-group">
                            <span class="input-group-text bg-light">/lcv/</span>
                            <input class="form-control" @bind="_event.Slug" placeholder="teknoloji-zirvesi" />
                        </div>
                    </div>
                    <div class="col-md-4">
                        <label class="form-label fw-bold small">Kategori</label>
                        <select class="form-select" @bind="_event.Type">
                            @foreach (var type in Enum.GetValues<EventType>())
                            {
                                <option value="@type">@type.ToString()</option>
                            }
                        </select>
                    </div>
                    <div class="col-md-4">
                        <label class="form-label fw-bold small">Tarih</label>
                        <input type="date" class="form-control" @bind="_event.EventDate" />
                    </div>
                    <div class="col-md-4">
                        <label class="form-label fw-bold small">Konum</label>
                        <input class="form-control" @bind="_event.Location" placeholder="Örn: Hilton Balo Salonu" />
                    </div>

                    @* 2. DİNAMİK ALANLAR *@
                    <div class="col-12 mt-4 pt-3 border-top">
                        <div class="d-flex justify-content-between align-items-center mb-3">
                            <h6 class="fw-bold mb-0 text-primary">Katılımcı Formu Özel Soruları</h6>
                            <button type="button" class="btn btn-outline-warning btn-sm fw-bold" @onclick="AddField">+ Yeni
                                Soru</button>
                            </div>
                            @foreach (var field in _fields)
                            {
                                <div class="row g-2 mb-2 p-3 bg-light rounded align-items-center border border-white shadow-xs">
                                    <div class="col-md-5">
                                        <input class="form-control form-control-sm" @bind="field.Label"
                                               placeholder="Soru: Masa No, Yemek vb." />
                                    </div>
                                    <div class="col-md-3">
                                        <select class="form-select form-select-sm" @bind="field.FieldType">
                                            <option value="Text">Metin</option>
                                            <option value="Number">Sayı</option>
                                            <option value="Boolean">Evet/Hayır</option>
                                        </select>
                                    </div>
                                    <div class="col-md-2">
                                        <div class="form-check form-switch mt-1">
                                            <input class="form-check-input" type="checkbox" @bind="field.IsRequired">
                                                <label class="small ms-1">Zorunlu</label>
                                            </div>
                                        </div>
                                        <div class="col-md-2 text-end">
                                            <button type="button" class="btn btn-link text-danger p-0"
                                                    @onclick="() => _fields.Remove(field)">
                                                <i class="oi oi-trash"></i>
                                            </button>
                                        </div>
                                    </div>
                                }
                            </div>

                            @* 3. EXCEL IMPORT *@
                            @if (Id != 0)
                            {
                                <div class="col-12 mt-4">
                                    <div class="p-4 bg-light rounded-3 border-dashed text-center">
                                        <h6 class="fw-bold mb-3 text-dark"><i class="oi oi-cloud-upload me-2"></i>Davetli Listesini
                                            Yükle</h6>
                                            <div class="d-flex justify-content-center gap-2">
                                                <InputFile OnChange="HandleFileSelected" class="form-control form-control-sm w-50"
                                                           accept=".xlsx" />
                                                <button type="button" class="btn btn-dark btn-sm px-4" @onclick="UploadExcel"
                                                        disabled="@(_selectedFile == null || _isImporting)">
                                                    @(_isImporting ? "Yükleniyor..." : "Listeyi Aktar")
                                                </button>
                                            </div>
                                        </div>
                                    </div>
                                }

                                @* 4. KAYDET *@
                                <div class="col-12 text-end mt-4 border-top pt-4">
                                    <button type="button" class="btn btn-link text-muted text-decoration-none me-3"
                                            @onclick='() => NavManager.NavigateTo("/admin/events")'>Vazgeç</button>
                                    <button type="button" class="btn btn-warning btn-lg px-5 shadow fw-bold" @onclick="SaveEvent"
                                            disabled="@_isSaving">
                                        @if (_isSaving)
                                        {
                                            <span class="spinner-border spinner-border-sm me-2"></span>
                                        }
                                        @(Id == 0 ? "Etkinliği Oluştur" : "Değişiklikleri Kaydet")
                                    </button>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <style>
                    .border-dashed {
                        border: 2px dashed #dee2e6 !important;
                    }

                    .shadow-xs {
                        box-shadow: 0 .125rem .25rem rgba(0, 0, 0, .04) !important;
                    }
                </style>

@code {
    [Parameter] public int Id { get; set; }
    private Event _event = new("", DateTime.Now.AddMonths(1), "", "", EventType.Wedding);
    private List<FormFieldDefinitionDto> _fields = new();

    private string? _errorMessage;
    private string? _importMessage;
    private bool _nameInvalid = false;
    private bool _isSaving = false;
    private bool _isImporting = false;
    private IBrowserFile? _selectedFile;

    protected override async Task OnInitializedAsync()
    {
        if (Id != 0)
        {
            var existing = await EventRepository.GetByIdAsync(Id);
            if (existing != null)
            {
                _event = existing;
                if (!string.IsNullOrEmpty(_event.FormConfigJson))
                    _fields = JsonSerializer.Deserialize<List<FormFieldDefinitionDto>>(_event.FormConfigJson) ?? new();
            }
        }
    }

    private void AddField() => _fields.Add(new FormFieldDefinitionDto { Id = Guid.NewGuid().ToString() });

    private async Task DownloadTemplate()
    {
        _event.FormConfigJson = JsonSerializer.Serialize(_fields);
        var bytes = await ExcelService.GenerateTemplateWithInstructionsAsync(_event);
        await JS.InvokeVoidAsync("downloadFile", $"{_event.Name}_Sablon.xlsx", Convert.ToBase64String(bytes));
    }

    private void HandleFileSelected(InputFileChangeEventArgs e) => _selectedFile = e.File;

    private async Task UploadExcel()
    {
        if (_selectedFile == null) return;
        _isImporting = true;
        _errorMessage = null;

        try
        {
            var buffer = new byte[_selectedFile.Size];
            using (var stream = _selectedFile.OpenReadStream(10 * 1024 * 1024))
            {
                await stream.ReadAsync(buffer);
            }

            var importedGuests = await Task.Run(() =>
            {
                using var ms = new MemoryStream(buffer);
                return ExcelService.ParseGuestExcelSync(ms, _event);
            });

            if (importedGuests.Any())
            {
                foreach (var g in importedGuests) await GuestRepository.AddAsync(g);
                await GuestRepository.SaveChangesAsync();
                _importMessage = $"{importedGuests.Count} davetli başarıyla aktarıldı.";
            }
        }
        catch (Exception ex)
        {
            _errorMessage = "Hata: " + ex.Message;
        }
        finally
        {
            _isImporting = false;
            _selectedFile = null;
        }
    }

    private async Task SaveEvent()
    {
        if (string.IsNullOrWhiteSpace(_event.Name)) { _nameInvalid = true; return; }
        _isSaving = true;
        try
        {
            _event.FormConfigJson = JsonSerializer.Serialize(_fields);
            if (Id == 0)
            {
                await EventRepository.AddAsync(_event);
                await EventRepository.SaveChangesAsync();
                NavManager.NavigateTo($"/admin/events/edit/{_event.Id}");
            }
            else
            {
                EventRepository.Update(_event);
                await EventRepository.SaveChangesAsync();
                NavManager.NavigateTo("/admin/events");
            }
        }
        catch (Exception ex)
        {
            _errorMessage = "Kaydetme hatası: " + ex.Message;
        }
        finally { _isSaving = false; }
    }
}